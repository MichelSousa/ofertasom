<layout version="0.1.0">

<checkout_onepage_success translate="label">
        <label>One Page Checkout Success</label>
        <reference name="root">
            <action method="setTemplate"><template>page/2columns-right.phtml</template></action>
        </reference>
        <reference name="content">
            <reference name="checkout.onepage.success">
                <block type="checkout/onepage_success" name="checkout.success" template="rede/checkout/success.phtml"/>
            </reference>
        </reference>
</checkout_onepage_success>

<erede_checkout_cancelled translate="label">
        <label>eRede Checkout Cancelled</label>
        <reference name="root">
            <action method="setTemplate"><template>page/2columns-right.phtml</template></action>
        </reference>
        <reference name="content">
            <reference name="erede.checkout.cancelled">
                <block type="erede/checkout_cancelled" name="erede.cancelled" template="rede/checkout/cancelled.phtml"/>
            </reference>
        </reference>
</erede_checkout_cancelled>

</layout>